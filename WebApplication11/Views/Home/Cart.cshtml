@{
    ViewData["Title"] = "Корзина";
}

<div style="margin-top:20px">
    <div class="row">
        @for (int i = 0; i < 10; i++)
        {
            <div class="col-md-3 mb-3">
                <div class="card" style="width: 18rem;">
                    <img src="~/img/КРОВАТЬ.png" class="card-img-top" alt="Кровать">
                    <div class="card-body">
                        <h5 class="card-title">Пельмень пельменский</h5>
                        <p class="card-text">Вкусно и точка</p>
                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-primary">Из корзины</a>
                            <a href="#" class="btn btn-secondary">В избранное</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-end mt-4">
        <div class="col-md-4">
            <h4>Итоговая сумма: <span id="totalPrice">1000 ₽</span></h4> <!-- Здесь можно динамически выводить сумму -->
            <a class="btn btn-success w-100 mt-3" type="button" asp-controller="Home" asp-action="Order">Заказать</a>
        </div>
    </div>
</div>
