@{
    ViewData["Title"] = "Каталог";
}

<div>
    <form class="d-flex" role="search">
        <div style="margin-right:10px">
            <div class="btn-group" role="group" aria-label="Простой пример">
                <button type="button" class="btn btn-primary">Свинина</button>
                <button type="button" class="btn btn-primary">Барашка</button>
                <button type="button" class="btn btn-primary">Говядина</button>
            </div>
        </div>
        <input class="form-control me-2" type="search" placeholder="Поиск" aria-label="Поиск">
        <button class="btn btn-outline-success" type="submit">Поиск</button>
    </form>

    <div style="margin-top:20px">
        <div class="row">
            @for (int i = 0; i < 10; i++)
            {
                <div class="col-md-3 mb-3">
                    <div class="card" style="width: 18rem;">
                        <img src="~/img/КРОВАТЬ.png" class="card-img-top" alt="Кровать">
                        <div class="card-body">
                            <h5 class="card-title">Пельмень пельменский</h5>
                            <p class="card-text">Вкусно и точка</p>
                            <div class="d-flex justify-content-between">
                                <a href="#" class="btn btn-primary">В корзину</a>
                                <a href="#" class="btn btn-secondary">В избранное</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
